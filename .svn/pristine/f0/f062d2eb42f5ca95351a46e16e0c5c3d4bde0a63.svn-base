                            channel: "blurbid:" + blurbid,
                            message: jsontext,
                            callback: function (details) {
                                var success = details[0],
                                    response = details[1];
                                if (success) console.log("Success!", response);
                                if (!success) console.log("Fail!", response);
                            }
                        });

                    }
                })


            }
        });
