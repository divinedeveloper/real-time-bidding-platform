// Insert User
exports.userAdd = function (sequelize, user) {
    return function (req, res) {
        var pw = crypto.createHmac('sha1', req.body.name).update(req.body.password).digest('hex');
        user.create({
            usertype: req.body.usertype,
            name: req.body.name,
            email: req.body.email,
            password: pw,
            companyname: req.body.companyname,
            phone: req.body.phone,
            description: req.body.description,
            logo: req.body.logo
        }).complete(function (err, user) {
            if (err != null) {
                console.log(err);
                res.json({
                    error: true,
                    message: "User Account Not Created",
                    response: err
                });
                res.end();
            } else {
                res.json({
                    error: false,
                    message: "Account Created",
                    response: user
                })
                res.end();
            };
        })
    }
};


// User SignUp
exports.userSignup = function (sequelize, user) {
    return function (req, res) {
        var name = req.body.name;
        var email = req.body.email;
        var pw = crypto.createHmac('sha1', 'abcd').update(req.body.password).digest('hex');
        user.create({
            name: req.body.name,
            email: req.body.email,
            password: pw
        }).complete(function (err, user) {
            if (err != null) {
                console.log(err);
                res.json({
                    error: true,
                    message: "User could not SignUp",
                    response: err
                });
                res.end();
            } else {
                emailUtility.signupMail(email, name);
                res.json({
                    error: false,
                    message: "Account Created",
                    response: user
                })
                res.end();
            };
        })
    }
};


