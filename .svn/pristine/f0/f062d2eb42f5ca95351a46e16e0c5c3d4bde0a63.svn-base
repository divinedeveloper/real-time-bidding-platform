// DELETE User by id 

exports.userDelete = function (sequelize, user) {
    return function (req, res) {
        if (isNaN(req.params.id)) {
            res.end("Enter valid User ID");
            return false;
        }
        user.find({
            where: {
                id: req.params.id
            }
        }).complete(function (err, user) {
            if (err != null) {
